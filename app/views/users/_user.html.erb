<li>
  <%= gravatar_for user, size: Settings.gravatar.size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t("static_pages.users.delete.delete_user"), user, method: :delete,
      data: {confirm: t("static_pages.users.delete.confirm")} %>
  <% end %>
</li>
