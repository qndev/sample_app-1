<% provide:title, t("static_pages.users.new.sign_up") %>
<h1><%= t "static_pages.users.new.title" %></h1>
<%= t "static_pages.users.new.content_html" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label t("static_pages.users.new.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t("static_pages.users.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("static_pages.users.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("static_pages.users.new.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("static_pages.users.new.button_new"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
