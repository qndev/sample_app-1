<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "static_pages.users.posted" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("static_pages.users.delete.delete_user"), micropost, method: :delete,
        data: {confirm: t("static_pages.users.delete.confirm")} %>
    <% end %>
  </span>
</li>
