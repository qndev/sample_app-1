<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "static_pages.users.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <%= t("static_pages.home.content_html") %>
  <%= link_to t("static_pages.users.new.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%#= link_to image_tag("kitten.jpg", alt: "Cat kitten") %>
<%= link_to image_tag("rails.png", alt: "Rails logo"), "http://rubyontails.org/" %>
<% end %>
